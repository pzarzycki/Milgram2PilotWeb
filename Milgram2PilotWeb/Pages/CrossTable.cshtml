</style>



<script>

    var audio = null;
    var audio_elem = null;

    function playAudio(elem, file_name) {
        if (audio != null) {
            audio.pause();
        }
        if (audio_elem != null) {
            audio_elem.html('');
        }
        audio = new Audio("/snd/target/" + file_name);
        audio_elem = elem;

        audio.onended = function () {
            elem.html('');
            audio_elem = null;
            audio = null;
        };
        elem.html('<img src="/img/sound_200.gif" style="width:36px;height:36px;margin:0;padding:0;" />')

        audio.play();

    }

    $('document').ready(function () {

      
        $('.audio_item').click(function () {
            file_name = $(this).attr('file_name');
            playAudio($(this), file_name);
        });

    });

</script>

